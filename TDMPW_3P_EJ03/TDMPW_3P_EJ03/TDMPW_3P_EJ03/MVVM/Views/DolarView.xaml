<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_3P_EJ03.MVVM.Views.DolarView"
             Title="DolarView">
    <VerticalStackLayout>
        <Label 
            Text="TIPO DE CAMBIO"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Header"/>
        <Label
            Text="{Binding valorDolar}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Large" />
        <Button
            Text="Consultar tipo de cambio"
            Command="{Binding consultar}"
            />
    </VerticalStackLayout>
</ContentPage>
